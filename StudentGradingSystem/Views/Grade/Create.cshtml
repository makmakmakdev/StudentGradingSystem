<form method="post" asp-action="Create">
    <div class="row mb-3">
        <div class="col-3">Student Id</div>
        <div class="col-9"><input required name="StudentId" class="form-control" /></div>
    </div>
    
    <div class="row mb-3">
        <div class="col-3">Subject</div>
        <div class="col-9"><input required name="Subject" class="form-control" /></div>
    </div>

    <div class="row mb-3">
        <div class="col-3">Score</div>
        <div class="col-9"><input required name="Score" type="number" step="0.01" min="60" max="100" class="form-control" /></div>
    </div>

    <div>
        <div class="col-3"></div>
        <div class="col-9">
            <button type="submit" class="btn btn-primary px-3">Save</button>
        </div>
    </div>
</form>